<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_back"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/logoTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/logoTopBar"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/iv_close"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="@id/logoTopBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/logoTopBar"
        app:tint="@color/white" />

    <RelativeLayout
        android:id="@+id/logoTopBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
         android:background="@drawable/top_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/whiteLineView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoTopBar" />

    <View
        android:id="@+id/whiteLineView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_margin="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomSocial" />

    <LinearLayout
        android:id="@+id/layoutBottomSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tvWebsiteLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFacebook"
            android:layout_width="@dimen/bottom_logo_size"
            android:layout_height="@dimen/bottom_logo_size"
            android:layout_marginHorizontal="7dp"
            android:src="@drawable/sm_facebook" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivInsta"
            android:layout_width="@dimen/bottom_logo_size"
            android:layout_height="@dimen/bottom_logo_size"
            android:layout_marginHorizontal="7dp"
            android:src="@drawable/sm_insta" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTwitter"
            android:layout_width="@dimen/bottom_logo_size"
            android:layout_height="@dimen/bottom_logo_size"
            android:layout_marginHorizontal="7dp"
            android:src="@drawable/sm_twitter" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTouTube"
            android:layout_width="@dimen/bottom_logo_size"
            android:layout_height="@dimen/bottom_logo_size"
            android:layout_marginHorizontal="7dp"
            android:src="@drawable/sm_youtube" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPinInterest"
            android:layout_width="@dimen/bottom_logo_size"
            android:layout_height="@dimen/bottom_logo_size"
            android:layout_marginHorizontal="7dp"
            android:src="@drawable/sm_pinterest" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWhatsApp"
            android:layout_width="@dimen/bottom_logo_size"
            android:layout_height="@dimen/bottom_logo_size"
            android:layout_marginHorizontal="7dp"
            android:src="@drawable/sm_whatsapp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWebsiteLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="www.vishumathana.com"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>